{% endif %}

<p>Descripcion: {{ description }}</p>

<form method="post" action="{{ path('createSerie') }}">
    <input name="titulo" type="text">
    <input name="descripcion" type="textarea">
    <select name="categoria">
        <option name="terror">Terror</option>
        <option name="comedia">Comedia</option>
        <option name="fantasia">Fantas√≠a</option>
    </select>
    <input type="submit">
</form>